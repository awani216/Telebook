<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

     >
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:elevation="8dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:id="@+id/image_room"
            />
            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginTop="86dp"
                android:id="@+id/marker"
                android:layout_marginLeft="5dp"
                android:background="@drawable/red_marker"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="E-Hall "
                android:textStyle="bold"
                android:textSize="20dp"
                android:layout_toRightOf="@+id/marker"
                android:background="#ffffff"
                android:id="@+id/room_name"
                android:layout_marginTop="80dp"

                />
            <TextView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:text="24"
                android:textColor="@color/green"
                android:id="@+id/date2"
                android:layout_margin="2dp"
                android:textStyle="italic"
                android:textSize="20dp"
                android:gravity="center"
                android:layout_below="@+id/image_room"
                />
            <TextView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:text="25"
                android:textColor="@color/green"
                android:id="@+id/date1"
                android:layout_margin="2dp"
                android:textStyle="italic"
                android:textSize="20dp"
                android:gravity="center"
                android:layout_below="@+id/image_room"
                android:layout_toRightOf="@+id/date2"
                />
            <TextView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:text="26"
                android:id="@+id/date"
                android:textColor="@color/red"
                android:layout_margin="2dp"
                android:textStyle="italic"
                android:textSize="20dp"
                android:gravity="center"
                android:layout_below="@+id/image_room"
                android:layout_toRightOf="@+id/date1"
                />
            <TextView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:text="27"
                android:id="@+id/date_1"
                android:textColor="@color/green"
                android:layout_margin="2dp"
                android:textStyle="italic"
                android:textSize="20dp"
                android:gravity="center"
                android:layout_below="@+id/image_room"
                android:layout_toRightOf="@+id/date"

                />
            <TextView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:text="28"
                android:id="@+id/date_2"
                android:textColor="@color/red"
                android:layout_margin="2dp"
                android:textStyle="italic"
                android:textSize="20dp"
                android:gravity="center"
                android:layout_below="@+id/image_room"
                android:layout_toRightOf="@+id/date_1"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:text=" Capacity : 120 "
                android:layout_below="@id/image_room"
                android:textSize="20dp"
                android:id="@+id/capacity"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dp"

                />
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/iv_mike"
                android:layout_below="@+id/date"
                android:layout_marginLeft="10dp"

                />
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/iv_proj"
                android:layout_toRightOf="@+id/iv_mike"
                android:layout_below="@+id/date"
                android:layout_marginLeft="10dp"

                />
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/iv_stage"
                android:layout_toRightOf="@+id/iv_proj"
                android:layout_below="@+id/date"
                android:layout_marginLeft="10dp"

                />


            <Button
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="   BOOK   "
                android:id="@+id/book"
                android:background="@color/colorPrimary"
                android:textColor="#ffffff"
                android:layout_marginTop="10dp"
                android:textSize="22dp"
                android:layout_below="@+id/capacity"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                />

        </RelativeLayout>
        </android.support.v7.widget.CardView>

</RelativeLayout>
