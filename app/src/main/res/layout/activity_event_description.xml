<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    android:background="@color/colorPrimaryDark">
    <TextView
        android:layout_width="332dp"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:textStyle="bold"
        android:text="National Institute of Technology Raipur"
        android:id="@+id/textView"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="56dp"
        android:layout_alignTop="@+id/imageView2"
        android:layout_alignRight="@+id/imageView2"
        android:layout_alignEnd="@+id/view" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="60dp"
        android:src="@drawable/nitrr_logo"
        android:id="@+id/imageView2" />


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp"
        android:layout_below="@+id/imageView2"
        android:layout_marginTop="4dp"
        android:scrollbars="horizontal"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="12dp">

    <android.support.v7.widget.CardView
        android:id="@+id/cardview_event_page"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:scrollbars="horizontal"
        >
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/event_committee_logo"
            android:src="@drawable/ecell_logo"
          />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="awani mishra"
            android:layout_alignRight="@+id/event_committee_logo"
            android:layout_alignParentRight="true"/>
        </RelativeLayout>
        </ScrollView>
    </android.support.v7.widget.CardView>
</LinearLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>