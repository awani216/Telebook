<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:padding="8dp"
    android:id="@+id/linearlayout_room_description"
    android:background="@color/colorPrimaryDark"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="12dp"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="National Institute of Technology Raipur"
            android:id="@+id/textView"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="56dp"
            android:layout_alignTop="@+id/imageView2"
            android:layout_alignRight="@+id/imageView2"
            android:layout_alignEnd="@+id/view" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:src="@drawable/nitrr_logo"
            android:id="@+id/imageView2" />

        <android.support.v7.widget.CardView

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="horizontal"
            android:layout_below="@+id/imageView2"
            android:layout_marginTop="8dp"
            android:id="@+id/view">
            <ScrollView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:scrollbars="horizontal">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    >

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/float_name_faculty_leave"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">
                        EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/name_faculty_leave"
                            android:hint="Name"
                            android:textColor="@color/colorPrimaryDark"
                            android:drawableTint="@color/colorPrimaryDark"
                            android:textColorHint="@color/colorPrimaryDark"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true" />
                    </android.support.design.widget.TextInputLayout>
                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/float_designation_faculty_leave"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/float_name_faculty_leave"
                        ></android.support.design.widget.TextInputLayout>
                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/float_department_faculty_leave"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/float_designation_faculty_leave"
                        >

                    </android.support.design.widget.TextInputLayout>
                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/float_datefrom_faculty_leave"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/float_department_faculty_leave"
                        >

                        <EditText
                            android:textColor="@color/colorPrimaryDark"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/datefrom_faculty_leave"
                            android:layout_marginTop="4dp"
                            android:hint="From"
                            android:inputType="date"
                            android:drawableTint="@color/colorPrimaryDark"
                            android:textColorHint="@color/colorPrimaryDark"
                            android:layout_below="@+id/float_designation_faculty_leave"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentEnd="true" />
                    </android.support.design.widget.TextInputLayout>
                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/float_dateto_faculty_leave"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/float_datefrom_faculty_leave"
                        >

                        <EditText
                            android:textColor="@color/colorPrimaryDark"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/dateto_faculty_leave"
                            android:layout_marginTop="4dp"
                            android:hint="To"
                            android:inputType="number"
                            android:textColorHint="@color/colorPrimaryDark"
                            android:layout_below="@+id/float_datefrom_faculty_leave"
                            android:drawableTint="@color/colorPrimaryDark"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentEnd="true" />
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/float_reason_faculty_leave"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/float_dateto_faculty_leave"
                        >

                   <EditText
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:id="@+id/reason_faculty_leave"
                       android:layout_below="@+id/float_dateto_faculty_leave"
                       android:hint="Reason"
                       android:layout_marginTop="4dp"/>
                </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/float_description_faculty_leave"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/float_reason_faculty_leave"
                        >

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/description_faculty_leave"
                            android:layout_below="@+id/float_description_faculty_leave"
                            android:hint="Description"
                            android:layout_marginTop="4dp"/>
                    </android.support.design.widget.TextInputLayout>

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="APPLY"
                        android:id="@+id/apply_filter"
                        android:layout_below="@+id/float_description_faculty_leave"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:background="@drawable/button_background"
                        android:layout_marginTop="12dp"/>
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="CLEAR"
                        android:layout_marginTop="12dp"
                        android:id="@+id/Clear"
                        android:layout_below="@+id/apply_filter"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:background="@drawable/button_background"/>

                </RelativeLayout>
            </ScrollView>

        </android.support.v7.widget.CardView>




    </RelativeLayout>

</LinearLayout>