<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="12dp">

    <android.support.v7.widget.CardView
        android:id="@+id/cardview_event_page"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:scrollbars="horizontal"
        >


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/event_committee_logo"
                android:src="@drawable/ecell_logo"
                />
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginLeft="64dp"
               android:text="RoomName : "
               android:id="@+id/history_roomname"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="64dp"
                android:text="Date Requested : "
                android:id="@+id/history_daterequested"
                android:layout_below="@+id/history_roomname"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="64dp"
                android:text="Status : "
                android:layout_below="@+id/history_daterequested"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>