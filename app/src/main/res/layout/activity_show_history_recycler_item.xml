<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="12dp">

    <android.support.v7.widget.CardView
        android:id="@+id/cardview_event_page"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
       app:cardCornerRadius="8dp"
        android:elevation="10dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">
            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/event_committee_logo"
                android:src="@drawable/ecell_logo"
                />
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginLeft="70dp"
               android:text="RoomName : "
               android:textStyle="bold"
               android:id="@+id/history_roomname"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="70dp"
                android:text="Date Requested : "
                android:id="@+id/history_daterequested"
                android:layout_below="@+id/history_roomname"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="70dp"
                android:id="@+id/history_status"
                android:text="Status : "
                android:layout_below="@+id/history_daterequested"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:background="@color/colorPrimaryDark"
                android:text="  view details  "
                android:layout_marginTop="4dp"
                android:id="@+id/details"
                android:textColor="#ffffff"
                android:textSize="18dp"
                android:layout_below="@+id/event_committee_logo"

                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:background="@color/colorPrimaryDark"
                android:text="  Track  "
                android:layout_toRightOf="@+id/details"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="4dp"
                android:textColor="#ffffff"
                android:textSize="18dp"
                android:layout_below="@+id/event_committee_logo"

                />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>