<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:padding="12dp">
    <ImageView
        android:layout_width="50dp"
        android:layout_height="60dp"
        android:src="@drawable/settings"
        android:id="@+id/settings"
        />
    <TextView
        android:layout_width="332dp"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:textSize="28sp"
        android:textStyle="bold"
        android:text="SETTINGS"
        android:id="@+id/textView"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="60dp"
        android:layout_alignTop="@+id/settings"
        android:layout_alignRight="@+id/settings"
        android:layout_alignEnd="@+id/view" />
    <android.support.v7.widget.CardView
        android:id="@+id/cardview_event_page"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp"
        android:scrollbars="horizontal"
        android:layout_below="@+id/settings"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="12dp">

            <TextView
                android:textColor="@color/colorPrimaryDark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="NOTIFICATION TIMER"
                android:id="@+id/nf_timer"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/spinner_notification"
                android:layout_below="@+id/nf_timer"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="4dp"
                android:background="@drawable/spinner_border"
                android:layout_alignParentStart="true" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="RESET TO DEFAULT"
                android:id="@+id/default_button"
                android:background="@drawable/button_background"
                android:layout_centerVertical="true"
                android:layout_alignLeft="@+id/popup"
                android:layout_alignStart="@+id/popup" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_marginTop="8dp"
                android:buttonTint="@color/colorPrimaryDark"
                android:layout_height="wrap_content"
                android:text="POPUP-NOTIFICATION"
                android:id="@+id/popup"
                android:textColor="@color/colorPrimaryDark"
                android:layout_below="@+id/spinner_notification"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:checked="false" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NOTIFICATION TUNE"
                android:id="@+id/tune"
                android:textColor="@color/colorPrimaryDark"
                android:layout_below="@+id/popup"
                android:layout_alignLeft="@+id/popup"
                android:layout_alignStart="@+id/popup"
                android:buttonTint="@color/colorPrimaryDark"
                android:checked="false" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="VIBRATION"
                android:id="@+id/vibration"
                android:textColor="@color/colorPrimaryDark"
                android:layout_below="@+id/tune"
                android:buttonTint="@color/colorPrimaryDark"
                android:layout_alignLeft="@+id/tune"
                android:layout_alignStart="@+id/tune"
                android:checked="false" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>