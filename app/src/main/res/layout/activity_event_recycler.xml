<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">
    <android.support.v7.widget.CardView
        android:id="@+id/cardview_event_page"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="4dp"
        android:padding="4dp"
        android:layout_margin="4dp"
        android:scrollbars="horizontal"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:id="@+id/event_committee_logo"
                android:src="@drawable/ecell_logo"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="75dp"
                android:textStyle="bold"
                android:textSize="17dp"
                android:text="EventName : "
                android:id="@+id/event_eventname"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="75dp"
                android:text="Venue : "
                android:id="@+id/event_eventvenue"
                android:layout_below="@+id/event_eventname"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="75dp"
                android:text="Date : "
                android:id="@+id/event_eventdate"
                android:layout_below="@+id/event_eventvenue"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="75dp"
                android:text="Time : "
                android:layout_below="@+id/event_eventdate"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/event_committee_logo"
                android:gravity="center"
                android:id="@+id/description_event"
                />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>