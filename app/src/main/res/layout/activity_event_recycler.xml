<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="4dp">
    <android.support.v7.widget.CardView
        android:id="@+id/cardview_event_page"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        app:cardCornerRadius="8dp"
        android:padding="4dp"
        android:elevation="8dp"
        android:scrollbars="horizontal"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <ImageView
                android:layout_width="70dp"
                android:layout_height="75dp"
                android:id="@+id/event_committee_logo"
                android:src="@drawable/ecell_logo"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="75dp"
                android:textStyle="bold"
                android:textSize="17dp"
                android:id="@+id/event_eventname"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="75dp"
                android:text="Venue : "
                android:id="@+id/event_eventvenue"
                android:layout_below="@+id/event_eventname"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="75dp"
                android:text="Date : "
                android:id="@+id/event_eventdate"
                android:layout_below="@+id/event_eventvenue"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="75dp"
                android:id="@+id/event_time"
                android:text="Time : "
                android:layout_below="@+id/event_eventdate"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/event_time"
                android:gravity="center"
                android:id="@+id/description_event"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:id="@+id/reminder"
                android:layout_alignParentRight="true"
                android:text="  Add to reminder  "
                android:textColor="#ffffff"

                android:layout_below="@+id/description_event"
                android:background="@color/colorPrimaryDark"
                />


        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>